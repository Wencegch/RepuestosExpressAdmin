            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.SugerenciasActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.FamiliasActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.repuestosexpressadmin.controllers.DetallePedidoActivity" />
