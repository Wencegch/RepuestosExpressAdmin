<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RepuestosExpressAdmin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>

        <!--ActionMenu-->
        <item name="actionModeStyle">@style/ActionModeCustom</item>

        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_menta</item>
        <item name="colorSecondaryVariant">@color/green_oliva</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ActionModeCustom" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/green</item>
    </style>

    <style name="Theme.RepuestosExpressAdmin" parent="Base.Theme.RepuestosExpressAdmin" />
</resources>